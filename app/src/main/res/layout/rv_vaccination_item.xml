<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cardVaccination"
    android:layout_height="wrap_content"
    android:layout_margin="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginBottom="-50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dummy" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_rounded_rect"
                android:backgroundTint="#BBEEF1"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvProgram"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:text="Vaksin 1"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAF6"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_tglVaksin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal Vaksin"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_pelaksana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.5"
                    android:text="Pelaksana"
                    android:textColor="@color/black" />

            </LinearLayout>
        </LinearLayout>
</androidx.cardview.widget.CardView>